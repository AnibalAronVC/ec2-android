<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChairActivity"
    android:scrollbars="none"
    android:background="@drawable/chair"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardChair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primera Chairs"
                android:layout_marginTop="0dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/gray" />
            <Button
                android:id="@+id/snackar_buttonAdd2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:clickable="true"
                android:padding="2dp"
                android:text=">"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginRight="12dp"
                app:backgroundTint="#EDEBEB"
                app:cornerRadius="100dp"
                android:layout_gravity="right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/snackar_buttonAdd"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TILST Chair"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginTop="-20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Armchair made of solid wood, hand-carved by craftsmen"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/snackar_buttonAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_baseline_add_shopping_cart_24"
                android:padding="10dp"
                android:text="Add to cart    |    $79.00"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:backgroundTint="#EDEBEB"
                app:cornerRadius="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/materialCard" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</ScrollView>